doctype html
html(lang="en")
 head 
  include includes/head
  title Carousel of Forms
  style(type="text/css").
    input[type="text"]{
    color:black;
    width:50px;
    }
    input[type="number"] {
    color:black;
    width:50px;
    }
    div[class="container-fluid"] {
    padding-left: 0px;
    }  
 body
  //Carousel
  //nav
   //a(href="http://ecu.edu",class= "h2") things
  
  div(id= "myCarousel",class= "carousel slide", data-ride="carousel",data-interval=0)
    //Indicators
    //ol.carousel-indicators
     each hole, i in Holder.holes
      if i == 1
       li(data-target="#myCarousel", data-slide-to=i,class="active")
      else
       li(data-target="#myCarousel", data-slide-to=i)
    div.carousel-inner
     each hole, i in Holder.holes
      if(i == 0)
       div.item.active
        div.container-fluid 
          img(data-src="holder.js/4000x680/auto/#777:#7a7a7a/text:"+ i,alt="First Slide")
          
          div.container
           div.carousel-caption
            include includes/holeInclude
      else
       div.item
        div.container-fluid
         img(data-src="holder.js/4000x680/auto/#777:#7a7a7a/text:" +i, alt=i)
         div.container
          div.carousel-caption
           include includes/holeInclude 
   //Controls
  //a(class="left carousel-control", href="#myCarousel",data-slide="prev")
   //span.glyphicon.glyphicon-chevron-left
  //a(class="right carousel-control",href="#myCarousel",data-slide="next")
    //span.glyphicon.glyphicon-chevron-right
  include includes/footer